    <body>
        <div class="fw-300">
            <nav class="ink-navigation">
                <ul class="menu horizontal black">
                    <div class="ink-grid">
                        <li><a href="../">Home </a> </li>
                        <li class="heading active"><a href="">Segments</a></li>
                        <li><a href="../rides">Rides</a></li>
                        <li><a href="../settings">Settings</a></li>
                        <li><a href="../logout">Logoff</a></li>
                    </div>
                </ul>
            </nav>
        </div>
        <br><br>
        <div class="ink-grid">
            <div class="column-group">
                <div class="all-80">
                    <div style="margin: 10px">
                        <table class="ink-table hover">
                            <thead>
                                <div class="fw-500">
                                    <tr>
                                        <th class="align-left">Segment Name</th>
                                        <th class="align-left">Segment Information & Statistics</th>
                                    </tr>
                                </div>
                            </thead>
                            <tbody>
                                {{#each segments}}
                                    <tr>
                                        {{#with this}}
                                            <td><div class="fw-100">{{name}}</div></td>
                                            <td><div class="fw-100">{{distance}}m, {{average_grade}}% average slope, {{maximum_grade}}% maximum slope</div></td>
                                        {{/with}}
                                    </tr>
                                {{/each}}
                            </tbody>
                        </table>    
                    </div>            



