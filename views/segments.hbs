                                <li><input type="checkbox" id="cb5" name="cb5" value="Chimaira" checked="checked"><label for="cb5"> KOM / QOM</label></li>
                                <li><input type="checkbox" id="cb4" name="cb4" value="Metallica" checked="checked"><label for="cb4"> 2nd - 5th</label></li>
                                <li><input type="checkbox" id="cb3" name="cb3" value="Motorhead" checked="checked"><label for="cb3"> 5th - 10th</label></li>
                                <li><input type="checkbox" id="cb2" name="cb2" value="Pantera" checked="checked"><label for="cb2"> 10th - 25th</label></li>
                                <li><input type="checkbox" id="cb1" name="cb1" value="Slayer" checked="checked"><label for="cb1"> 25th+</label></li>
