                <div class="all-80">
                ...
                </div>
                <div class="all-20">
                    <nav class="ink-navigation sidebar">
                        <div class="fw-300">
                            <ul class="menu vertical">
                                <div class="control-group all-50 small-100 tiny-100">
                                    <div class="control append-symbol">
                                        <span>
                                            <input type="text" name="segment" placeholder="segment id">
                                            <i class="fa fa-search"></i>
                                        </span>
                                    </div>
                                </div>
                            </ul>
                        </div>

